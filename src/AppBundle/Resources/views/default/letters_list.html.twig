{% extends '@App/base.html.twig' %}

{% block title %}Letters{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding-top: 50px;
        }
        #letters tfoot th input {
            font-weight: normal;
        }
    </style>
{% endblock %}

{% block body %}
    {{ include('AppBundle:widgets:nav.html.twig') }}

    <div class="container">
        <div class="row">

            <div class="col-xs-12">
                <h1>Letters</h1>
                <table id="letters" class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th class="no-search"></th>
                            <th>Last</th>
                            <th>First</th>
                            <th>Year</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="no-search"></th>
                            <th>Last</th>
                            <th>First</th>
                            <th>Year</th>
                            <th>Rating</th>
                        </tr>
                    </tfoot>
                    <tbody></tbody>
                </table>
            </div>

        </div>
    </div><!-- /.container -->
{% endblock %}

{% block javascripts %}
    {% javascripts '@datatables_js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function(){

            // create search boxes for each column
            $('#letters tfoot th:not(.no-search)').each( function () {
                var title = $(this).text();
                $(this).html( '<input type="text" class="form-control input-sm" placeholder="Search '+title+'" />' );
            } );

            var table = $('#letters').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "{{ path('api_letters') }}",
                    "dataSrc": function(json) {
                        console.log(json);
                        for (var i = 0; i<json.data.length; i++) {
                            json.data[i]['_buttons'] = '<a href="/letter/'+json.data[i]['id']+'" class="btn btn-primary btn-xs" title="View details"><span class="glyphicon glyphicon-eye-open"></span></a>';
                        }
                        console.log(json);
                        return json.data;
                    }
                },
                columns: [
                    {
                        "class":          "row-buttons",
                        "orderable":      false,
                        "searchable":     false,
                        "data":           "_buttons",
                        "defaultContent": ""//"<button class='btn btn-primary btn-xs' title='View details'><span class='glyphicon glyphicon-eye-open'></span></button>&nbsp;<button class='btn btn-danger btn-xs' title='Delete'><span class='glyphicon glyphicon-trash'></span></button>"
                    },
                    { data: "nameLast" },
                    { data: "nameFirst" },
                    { data: "originYear" },
                    { data: "rating" }
                ],
                "order": [
                    [ 1, "asc" ],
                    [ 2, "asc" ],
                    [ 3, "asc" ]
                ]
            });

            // Apply the search
            table.columns().every( function () {
                var that = this;

                $( 'input', this.footer() ).on( 'keyup change', function () {
                    if ( that.search() !== this.value ) {
                        that.search( this.value ).draw();
                    }
                } );
            } );
        });
    </script>
{% endblock %}
