{% extends '@App/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding-top: 50px;
        }

        .starter-template {
            padding: 40px 15px;
            text-align: center;
        }

    </style>
{% endblock %}

{% block body %}
    {{ include('AppBundle:widgets:nav.html.twig') }}

    <div class="container">

        <div class="starter-template">
            <div class="center-block">
                <a href="{{ path('letters_list') }}">
                    {% image '@AppBundle/Resources/public/images/j-tile.png' %}
                        <img src="{{ asset_url }}" alt="J letter tile" />
                    {% endimage %}
                </a>
            </div>
            <h1>Welcome to Jimbox!</h1>
            <p class="lead">Use the buttons above to select an action.</p>
        </div>

    </div><!-- /.container -->
{% endblock %}

